/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "qca9531.dtsi"

/ {
	compatible = "mikrotik,rb-map-2nd", "qca,qca9531";
	model = "MikroTik RB mAP 2nD";

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x4000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200n8";
	};

	aliases {
		led-status = &user;
	};

	keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		button0 {
			label = "Reset button";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		power {
			label = "rb:green:power";
			gpios = <&gpio 4 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		lan0 {
			label = "rb:green:eth0";
			gpios = <&led_gpio 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		lan1 {
			label = "rb:green:eth1";
			gpios = <&led_gpio 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		poe_out {
			label = "rb:red:poe_out";
			gpios = <&led_gpio 2 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
		
		user {
			label = "rb:green:user";
			gpios = <&led_gpio 3 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
		
		wlan {
			label = "rb:green:wlan";
			gpios = <&led_gpio 4 GPIO_ACTIVE_LOW>;
			default-state = "off";
			linux,default-trigger = "phy0tpt";
		};

		ap_cap {
			label = "rb:green:ap_cap";
			gpios = <&led_gpio 6 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_poe_out {
			gpio-export,name = "rb:poe_out";
			gpio-export,output = <0>;
			gpios = <&gpio 14 GPIO_ACTIVE_HIGH>;
		};
		
		gpio_usb_power {
			gpio-export,name = "rb:power:usb";
			gpio-export,output = <1>;
			gpios = <&led_gpio 5 GPIO_ACTIVE_LOW>;
		};
	};
};

&ref {
	clock-frequency = <25000000>;
};

&uart {
	status = "okay";
};

&usb0 {
	status = "okay";

	hub_port: port@1 {
		reg = <1>;
		#trigger-soruce-cells = <0>;
	};
};

&usb_phy {
	status = "okay";
};

&spi {
	status = "okay";
	cs-gpios = <0>, <&gpio 11 0>;
	num-cs = <2>;

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "routerboot";
				reg = <0x000000 0xe000>;
			};

			config: partition@e000 {
				label = "hard_config";
				reg = <0x00e000 0x1000>;
			};

			partition@f000 {
				label = "bios";
				reg = <0x00f000 0x1000>;
			};
			
			partition@f000 {
				label = "bios";
				reg = <0x00f000 0x1000>;
			};
			
			partition@10000 {
				label = "routerboot2";
				reg = <0x010000 0xf000>;
			};

			partition@1f000 {
				label = "soft_config";
				reg = <0x01f000 0x1000>;
			};

			partition@20000 {
				label = "firmware";
				reg = <0x020000 0xfe0000>;
			};
		};
	};
	
	led_gpio: led_gpio@0 {
				compatible = "fairchild,74hc595";
				reg = <1>;
				gpio-controller;
				#gpio-cells = <2>;
				registers-number = <1>;
				spi-max-frequency = <25000000>;
			};
};

&mdio0 {
	status = "okay";

	phy-mask = <4>;
	phy4: ethernet-phy@4 {
		reg = <4>;
	};
};

&mdio1 {
	status = "okay";
};

&eth0 {
	status = "okay";

	mtd-mac-address = <&config 0x10>;
	phy-handle = <&phy4>;
	phy-mode = "mii";

	fixed-link {
		speed = <100>;
		full-duplex;
	};
};

&eth1 {
	status = "okay";

	mtd-mac-address = <&config 0x10>;
	mtd-mac-address-increment = <1>;
	phy-mode = "gmii";

	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&wmac {
	status = "disabled";
	mtd-cal-data = <&art 0x1000>;
	mtd-mac-address = <&config 0x10>;
	mtd-mac-address-increment = <2>;
};
